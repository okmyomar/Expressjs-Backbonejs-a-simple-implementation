<div class="col-md-offset-5 col-md-3">
    <div class="form-login">
    <h4>Edit user</h4>
    <input type="text" id="userName" class="form-control input-sm chat-input" value="{{username}}" readonly/>
    </br>
    <input type="password" id="password" class="form-control input-sm chat-input" value="Its a secret" readonly/>
    </br>
    <div>
        Add the necessary roles<button id="addRoleBtn" type="button" class="btn btn-sm btn-primary"><i>+</i></button>
        <ul id="role-list" class="list-unstyled">
            {{#each roles}}
                <li><input type="text" value="{{this}}"></li>
            {{/each}}
        </ul>
    </div>
    <span id="messages" class="error"></span>
    <div class="wrapper">
    <span class="group-btn">
        <button type="button" id="save" class="btn btn-primary btn-md">Accept</i></button>
    </span>
    </div>
    </div>
</div>

