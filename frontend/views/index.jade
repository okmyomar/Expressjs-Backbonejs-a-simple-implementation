<!DOCTYPE html>
html(lang="en")
head
  meta(charset="UTF-8")
  title Document
  script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
  script(src='/app.js')
  script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/3.0.0/handlebars.js')

  style(href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css')
  script#user-list(type='text/x-handlebars-template').
    <table>
        <thead>
          <th>id</th><th>user</th><th>Roles</th>
        </thead>
        <tbody>
          {{#each users}}
            <tr>
              <td>{{_id}}</td><td>{{username}}</td><td>{{#each roles}}{{this}}, {{/each}}</td>
            </tr>
          {{/each}}
        </tbody>
    </table>

  script#add-user(type='text/x-handlebars-template').
    <form>
      <input type="text" name="username" id="username"></input>
      <input type="password" name="password" id="password"></input>
      <input type="checkbox" id="developer" value="developer">developer</input>
      <input type="checkbox" id="designer" value="designer">designer</input>
      <input type="checkbox" id="sales" value="sales">sales</input>
      <span id="message"></span>
      <button type="button" id="save-user">Save</button>
    </form>

body
  div#main-container
  div Click the button to watch all users
    button(type="button", id="getUsersBtn") Show users

  div Create a new user
    button(type="button", id="createUserBtn") Create user
